<header class="header">
  <div class="header_logo">
    <div class="logo_image">
      {{#link-to "main"}}
        <img src="/assets/images/logo.png" alt="Logo">
      {{/link-to}}
    </div>
    <div class="logo_text">
      {{#link-to "main"}}
        Электронный учебник по робототехнике
      {{/link-to}}
    </div>
  </div>
  <div class="title_container">
    <h1>{{pageTitle}}</h1>
  </div>
  <div class="header_account_control">
    {{#if session.isAuthentificated}}
      <div class="username">
        {{username}}
      </div>
      <button class="btn" {{action logout}}>Выйти</button>
    {{else}}
      <button class="btn">
        {{#link-to "register"}}
          Зарегистрироваться
        {{/link-to}}
      </button>
      <button class="btn">
        {{#link-to "login"}}
          Войти
        {{/link-to}}
      </button>
    {{/if}}
  </div>
</header>
<div class="container">
  <div class="sidebar">
    <div class="sidebar_nav">
      <div class="sidebar_item">
        {{#link-to "main"}}
        Главная
        {{/link-to}}
      </div>
      <div class="sidebar_item">
        {{#link-to "catalog"}}
        Каталог
        {{/link-to}}
      </div>
      <div class="sidebar_item">
        {{#link-to "theory"}}
        Теория
        {{/link-to}}
      </div>
    </div>
  </div>
  <div class="content">
    {{outlet}}
  </div>
</div>
